{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2016",   
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ],
  },
  "include": [
    "src",
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}
