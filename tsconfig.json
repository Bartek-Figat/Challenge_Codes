{
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es2016",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "include": ["src", "lib/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
